import ExperienceItem from "./ExperienceItem.astro";
const EXPERIENCE = [
  {
    date: "Oct 28, 2023",
    title: "Front-end projects-01",
    company: "一言之际",
    description:
      "Finished my first project"
  },
  {
    date: "Aug 12, 2024",
    title: "Front-end projects-02",
    company: "Personal-project-homepage",
    description:
      "There have been four iterations of the personal home project, and I think it's quite aesthetically pleasing, but there's no mobile UI.",
  },
  {
